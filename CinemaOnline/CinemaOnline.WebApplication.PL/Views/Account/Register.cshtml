@model RegisterViewModel

<form method="post" action="@Url.Action("Register")">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" name="@nameof(RegisterViewModel.Name)" class="form-control" id="name">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="text" name="@nameof(RegisterViewModel.Email)" class="form-control" id="email" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="@nameof(RegisterViewModel.Password)" class="form-control" id="password" required>
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Repeat password:</label>
        <input type="password" name="@nameof(RegisterViewModel.ConfirmPassword)" class="form-control" id="confirmPassword" required>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">SIGN UP</button>
    </div>
</form>