@model SessionDTO

<div class="card">
    <div class="card-header">
        Ticket
    </div>
    <div class="card-body">
        <h4>
            Film:
            <small class="text-muted">@Model.FilmName</small>
        </h4>
        <h4>
            Cinema:
            <small class="text-muted">@Model.CinemaName</small>
        </h4>
        <h4>
            Date:
            <small class="text-muted">@Model.Time</small>
        </h4>
        <h4>
            Price:
            <small class="text-muted">@Model.Price BYN</small>
        </h4>
    </div>
    <div class="card-footer">
        <form method="post" asp-action="Buy" asp-controller="Films">
            <input type="hidden" value="@Model.Id" name="SessionId" />
            <input type="hidden" value="@Model.Price" name="Price" />            
            <button type="submit" class="btn btn-primary btn-lg">Buy</button>
        </form>
    </div>
</div>


